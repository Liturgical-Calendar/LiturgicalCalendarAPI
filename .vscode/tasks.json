{
    "version": "2.0.0",
    "options": {
        "env": {
            "API_PROTOCOL": "http",
            "API_HOST": "localhost",
            "API_PORT": "8000"
        }
    },
    "tasks": [
        {
            "label": "launch-browser",
            "type": "shell",
            "windows": {
                "command": "${command:workbench.action.terminal.sendSequence}",
                "args": [
                    "/c",
                    "if exist server.pid (echo Server already running, skipping browser launch) else start ${API_PROTOCOL}://${API_HOST}:${API_PORT}"
                ],
                "problemMatcher": []
            },
            "linux": {
                "command": "/bin/bash", // For Linux
                "args": [
                    "-c",
                    "if [ -f server.pid ] || [ -f server.vscode.pid ]; then echo \"Server already running, skipping browser launch\"; else if grep -q microsoft /proc/version; then powershell.exe Start-Process ${API_PROTOCOL}://${API_HOST}:${API_PORT}; else xdg-open ${API_PROTOCOL}://${API_HOST}:${API_PORT}; fi; fi"
                ],
                "problemMatcher": []
            },
            "osx": {
                "command": "/bin/bash", // For macOS
                "args": [
                    "-c",
                    "if [ -f server.pid ] || [ -f server.vscode.pid ]; then echo \"Server already running, skipping browser launch\"; else open ${API_PROTOCOL}://${API_HOST}:${API_PORT}; fi"
                ],
                "problemMatcher": []
            }
        },
        {
            "label": "php-server",
            "type": "shell",
            "command": "./start-server.sh",
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "RUN_MODE": "vscode",
                    "PHP_CLI_SERVER_WORKERS": "6"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [ "launch-browser" ],
            "dependsOrder": "sequence"
        },
        {
            "label": "litcal-tests-websockets",
            "type": "shell",
            "command": "php public/LitCalTestServer.php",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
