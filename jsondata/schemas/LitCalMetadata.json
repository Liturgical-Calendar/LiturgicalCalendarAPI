{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "$id": "./LitCalMetadata.json",
    "title": "LitCalMetadata",
    "type": "object",
    "properties": {
        "litcal_metadata": {
            "$ref": "#/definitions/LitCalMetadata"
        }
    },
    "required": [
        "litcal_metadata"
    ],
    "additionalProperties": false,
    "definitions": {
        "LitCalMetadata": {
            "type": "object",
            "properties": {
                "national_calendars": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "additionalProperties": false,
                        "properties": {
                            "calendar_id": {
                                "$ref": "./CommonDef.json#/definitions/Nation"
                            },
                            "locales": {
                                "type": "array",
                                "items": {
                                    "$ref": "./CommonDef.json#/definitions/Locale"
                                }
                            },
                            "missals": {
                                "type": "array",
                                "items": {
                                    "$ref": "./CommonDef.json#/definitions/MissalID"
                                }
                            },
                            "wider_region": {
                                "$ref": "./CommonDef.json#/definitions/WiderRegionNames"
                            },
                            "dioceses": {
                                "type": "array",
                                "items": {
                                    "$ref": "./CommonDef.json#/definitions/DiocesanCalendarId"
                                }
                            },
                            "settings": {
                                "$ref": "./CommonDef.json#/definitions/CalendarSettings"
                            }
                        },
                        "required": ["calendar_id", "missals"]
                    }
                },
                "national_calendars_keys": {
                    "type": "array",
                    "uniqueItems": true,
                    "items": {
                        "$ref": "./CommonDef.json#/definitions/Nation"
                    }
                },
                "diocesan_calendars": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "additionalProperties": false,
                        "properties": {
                            "calendar_id": {
                                "$ref": "./CommonDef.json#/definitions/DiocesanCalendarId"
                            },
                            "nation": {
                                "$ref": "./CommonDef.json#/definitions/Nation"
                            },
                            "diocese": {
                                "$ref": "./CommonDef.json#/definitions/DioceseName"
                            },
                            "locales": {
                                "type": "array",
                                "items": {
                                    "$ref": "./CommonDef.json#/definitions/Locale"
                                }
                            },
                            "timezone": {
                                "$ref": "./CommonDef.json#/definitions/Timezone"
                            },
                            "group": {
                                "type": "string"
                            },
                            "settings": {
                                "$ref": "./CommonDef.json#/definitions/CalendarSettings"
                            }
                        },
                        "required": [
                            "calendar_id",
                            "locales",
                            "nation",
                            "diocese"
                        ]
                    }
                },
                "diocesan_calendars_keys": {
                    "type": "array",
                    "uniqueItems": true,
                    "items": {
                        "$ref": "./CommonDef.json#/definitions/DiocesanCalendarId"
                    }
                },
                "diocesan_groups": {
                    "type": "array",
                    "uniqueItems": true,
                    "items": {
                        "type": "object",
                        "additionalProperties": false,
                        "properties": {
                            "group_name": {
                                "type": "string"
                            },
                            "dioceses": {
                                "type": "array",
                                "items": {
                                    "$ref": "./CommonDef.json#/definitions/DiocesanCalendarId"
                                }
                            }
                        },
                        "required": ["group_name", "dioceses"]
                    }
                },
                "wider_regions": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/WiderRegionDef"
                    }
                },
                "wider_regions_keys": {
                    "type": "array",
                    "uniqueItems": true,
                    "items": {
                        "$ref": "./CommonDef.json#/definitions/WiderRegionNames"
                    }
                },
                "locales": {
                    "type": "array",
                    "uniqueItems": true,
                    "minItems": 1,
                    "items": {
                        "$ref": "./CommonDef.json#/definitions/Locale"
                    }
                }
            },
            "required": [
                "national_calendars",
                "national_calendars_keys",
                "diocesan_calendars",
                "diocesan_calendars_keys",
                "diocesan_groups",
                "wider_regions",
                "wider_regions_keys",
                "locales"
            ],
            "additionalProperties": false
        },
        "WiderRegionDef": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "name": {
                    "$ref": "./CommonDef.json#/definitions/WiderRegionNames"
                },
                "locales": {
                    "type": "array",
                    "items": {
                        "$ref": "./CommonDef.json#/definitions/Locale"
                    }
                },
                "api_path": {
                    "type": "string",
                    "description": "Template URL for the wider region endpoint; {locale} must be substituted and path segments URL-encoded by clients.",
                    "pattern": "^https?:\\\/\\\/(?:litcal\\.johnromanodorazio\\.com\\\/api\\\/(?:dev|v[3-9]|v[1-9]\\d+)|localhost(?:\\:\\d{4}))\\\/data\\\/widerregion\\\/(?:Africa|Alsace|Americas|Anatolia|Antarctica|Asia|Australasia|Central Africa|Central America|Europe|Indies|Middle East|North Africa|Oceania|Scandinavia|South America|West Indies)\\?locale=\\{locale\\}$"
                }
            },
            "required": ["name", "locales", "api_path"]
        }
    }
}
