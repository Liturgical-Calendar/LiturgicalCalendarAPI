{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "./DiocesanCalendar.json",
    "title": "DiocesanCalendar",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "litcal": {
            "$ref": "#/definitions/LitCal"
        },
        "settings": {
            "$ref": "./CommonDef.json#/definitions/CalendarSettings",
            "title": "Settings"
        },
        "metadata": {
            "$ref": "#/definitions/DiocesanCalendarMetadata"
        },
        "i18n": {
            "$ref": "#/definitions/CalendarI18n"
        }
    },
    "required": [
        "litcal",
        "metadata"
    ],
    "definitions": {
        "LitCal": {
            "type": "array",
            "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "liturgical_event": {
                        "type": "object",
                        "additionalProperties": false,
                        "properties": {
                            "event_key": {
                                "type": "string",
                                "pattern": "^[A-Z](?:[A-Z]+_)*[a-zA-Z1-9]+[0-9]{0,2}(?:_vigil|_[0-9])?$"
                            },
                            "color": {
                                "$ref": "./CommonDef.json#/definitions/LitColor"
                            },
                            "grade": {
                                "$ref": "./CommonDef.json#/definitions/LitGrade"
                            },
                            "common": {
                                "$ref": "./CommonDef.json#/definitions/LitCommon"
                            },
                            "day": {
                                "$ref": "./CommonDef.json#/definitions/Day"
                            },
                            "month": {
                                "$ref": "./CommonDef.json#/definitions/Month"
                            },
                            "readings": {
                                "$ref": "./CommonDef.json#/definitions/Readings"
                            },
                            "name": {
                                "type": "string"
                            },
                            "strtotime": {
                                "type": "string"
                            }
                        },
                        "required": [
                            "event_key",
                            "color",
                            "grade",
                            "common"
                        ]
                    },
                    "metadata": {
                        "type": "object",
                        "additionalProperties": false,
                        "properties": {
                            "form_rownum": {
                                "type": "integer"
                            },
                            "since_year": {
                                "type": "integer",
                                "minimum": 1970
                            },
                            "until_year": {
                                "type": "integer",
                                "maximum": 9999
                            },
                            "url": {
                                "type": "string",
                                "format": "uri"
                            }
                        },
                        "required": [
                            "form_rownum",
                            "since_year"
                        ]
                    }
                },
                "required": [
                    "liturgical_event",
                    "metadata"
                ]
            },
            "title": "LitCal"
        },
        "DiocesanCalendarMetadata": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "diocese_id": {
                    "$ref": "./CommonDef.json#/definitions/DiocesanCalendarId"
                },
                "diocese_name": {
                    "$ref": "./CommonDef.json#/definitions/DioceseName"
                },
                "nation": {
                    "$ref": "./CommonDef.json#/definitions/Nation"
                },
                "locales": {
                    "type": "array",
                    "uniqueItems": true,
                    "items": {
                        "$ref": "./CommonDef.json#/definitions/Locale"
                    }
                },
                "timezone": {
                    "type": "string"
                },
                "group": {
                    "type": "string"
                }
            },
            "required": [
                "diocese_id",
                "diocese_name",
                "nation",
                "locales",
                "timezone"
            ]
        },
        "CalendarI18n": {
            "type": "object",
            "description": "A JSON object of the form { \"locale\": { \"key\": \"value\" } }, used only in PUT and PATCH requests.",
            "additionalProperties": false,
            "propertyNames": {
                "$ref": "./CommonDef.json#/definitions/Locale"
            },
            "patternProperties": {
                "": {
                    "type": "object",
                    "additionalProperties": false,
                    "propertyNames": {
                        "$ref": "./CommonDef.json#/definitions/EventKey"
                    },
                    "patternProperties": {
                        "": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    }
}
